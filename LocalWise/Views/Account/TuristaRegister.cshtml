@using LocalWise.ViewModel;
@model RegisterTuristaViewModel
@{
}

<form asp-action="TuristaRegister" method="post">
    <div class="mb-3">
        <label asp-for="Nome">Nome</label>
        <input asp-for="Nome" placeholder="Nome">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email">E-Mail</label>
        <input asp-for="Email" placeholder="Email">
    </div>
    <div class="mb-3">
        <label asp-for="Senha">Senha</label>
        <input asp-for="Senha" placeholder="Senha">
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>
    <input class="btn btn-primary btn-block mb-4" type="submit" value="Submit" />
</form>