@using LocalWise.ViewModel;
@model RegisterLocalWiseManagerViewModel

<h1>Registro de LocalWiser´s</h1>

<div class="row">
    <div class="col-md-8 offset-2">
        <form method="post" asp-action="RegisterLocalWiseManager">
            <!-- o "enctype="multipart/form-data" é para poder usar as magens com o cloudinary -->
            <div class="mb-3">
                <label asp-for="Nome">Nome</label>
                <input asp-for="Nome" class="form-control" placeholder="Nome">
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email">E-Mail</label>
                <input asp-for="Email" class="form-control" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password">Senha</label>
                <!--<input asp-for="Password" class="form-control">-->
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <input class="btn btn-primary" type="submit" value="Submit" />
        </form>
    </div>
</div>
